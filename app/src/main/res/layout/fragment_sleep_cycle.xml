<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SleepCycleFragment">

    <Button
        android:id="@+id/addSleepButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sleep Time" />

    <Button
        android:id="@+id/addWakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Wake Time" />

    <TextView
        android:id="@+id/estimatesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estimates:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/predictionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predictions:"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>